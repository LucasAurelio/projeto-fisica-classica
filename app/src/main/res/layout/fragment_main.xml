<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.lucas.fisica_classica.MainActivity$PlaceholderFragment">

    <TextView
        android:id="@+id/section_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Carga 1 (sem sinal):"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textCarga1"
        android:textAlignment="textEnd"
        android:layout_alignBaseline="@+id/carga1"
        android:layout_alignBottom="@+id/carga1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Carga 2 (sem sinal):"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:id="@+id/textCarga2"
        android:layout_below="@+id/carga1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Distância:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/carga2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/carga2"
        android:textSize="14sp"
        android:layout_alignBaseline="@+id/textCarga2"
        android:layout_alignBottom="@+id/textCarga2"
        android:layout_alignRight="@+id/carga1"
        android:layout_alignEnd="@+id/carga1" />

    <EditText
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/distancia1"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        android:layout_width="80dp" />

    <EditText
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_marginTop="68dp"
        android:id="@+id/carga1"
        android:textSize="14sp"
        android:layout_below="@+id/section_label"
        android:layout_toRightOf="@+id/textCarga1"
        android:layout_toEndOf="@+id/textCarga1" />

    <EditText
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/unidade2"
        android:textSize="14sp"
        android:layout_alignBaseline="@+id/carga2"
        android:layout_alignBottom="@+id/carga2"
        android:layout_alignRight="@+id/buttonForca"
        android:layout_alignEnd="@+id/buttonForca"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp" />

    <EditText
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/unidade1"
        android:textSize="14sp"
        android:layout_alignBaseline="@+id/carga1"
        android:layout_alignBottom="@+id/carga1"
        android:layout_alignLeft="@+id/unidade2"
        android:layout_alignStart="@+id/unidade2" />

    <EditText
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/unidade3"
        android:textSize="14sp"
        android:layout_alignBaseline="@+id/distancia1"
        android:layout_alignBottom="@+id/distancia1"
        android:layout_alignRight="@+id/carga2"
        android:layout_alignEnd="@+id/carga2" />

    <Button
        android:text="Calcular Força Eletrostática"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonForca"
        android:onClick="getAnswerForca"
        android:layout_marginTop="46dp"
        android:layout_below="@+id/distancia1"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="  "
        android:id="@+id/answerForca"
        android:textAlignment="center"
        android:textSize="36sp"
        android:layout_alignTop="@+id/buttonForca"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:layout_height="100dp"
        android:layout_width="400dp" />

</RelativeLayout>
